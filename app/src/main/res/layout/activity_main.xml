<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <TextView
        android:text="@string/current_won_matches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/current_won_matches"
        android:layout_centerHorizontal="true"
        android:theme="@style/ButtonTheme"
        android:layout_marginTop="30dp"
        android:gravity="center" />

    <TextView
        android:text="@string/desc_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/desc_Text"
        android:layout_centerHorizontal="true"
        android:theme="@style/ButtonTheme"
        android:layout_below="@+id/current_won_matches"
        android:layout_marginTop="50dp"
        android:gravity="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/new_won_matches"
        android:layout_below="@+id/desc_Text"
        android:layout_centerHorizontal="true"
        android:theme="@style/ButtonTheme" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update_won_matches"
        android:id="@+id/update_won_matches"
        android:layout_below="@+id/new_won_matches"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:theme="@style/ButtonTheme" />

</RelativeLayout>
